{
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue",
    "html"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "vetur.validation.template": false,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "files.associations": {
    "*.yaml": "home-assistant"
  },
  "compile-hero.disable-compile-files-on-did-save-code": false,
}